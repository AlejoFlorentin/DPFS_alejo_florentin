<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>
    <main class="mainIndex">
      <!-- Dato que guardamos en la session -->
      <% if(locals.lastUser !== undefined) { %>
      <div
        class="d-flex justify-content-center align-items-center border border-dark rounded-2 gap-3 p-2 m-3 ms-5 me-5 border-3">
        <img class="imgUser rounded-2" src="<%= lastUser.image %>" alt="" />
        <h2 class="text-center">
          Bienvenido/a <%= lastUser.name %> a Superlative
        </h2>
        <h3></h3>
      </div>

      <%} %>
      <div
        id="carouselExampleInterval"
        class="carousel slide"
        data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="5000">
            <img
              src="/img/logos/carouse-1.webp"
              class="d-block w-100"
              alt="carousel-img" />
          </div>
          <div class="carousel-item" data-bs-interval="5000">
            <img
              src="/img/logos/carouse-2.webp"
              class="d-block w-100"
              alt="carousel-img" />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleInterval"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleInterval"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <section class="container mt-5">
        <h2 class="text-center mb-3">Destacados - Superlative</h2>

        <div class="row justify-content-center">
          <% destacados.forEach(cloth => { %>
          <article class="product col-lg-3 col-md-4 col-sm-6 mb-4">
            <a
              class="text-black text-decoration-none"
              href="/productos/detalle/<%= cloth.id %>">
              <img src="<%= cloth.img %>" alt="<%= cloth.title %>" />
              <div
                class="d-flex flex-column align-items-center justify-content-center">
                <h4 class="text-center"><%= cloth.title %></h4>
                <div class="d-flex flex-column align-items-center">
                  <p>$ <%= cloth.price %></p>
                  <p
                    class="border border-danger border-2 p-1 text-danger text-center">
                    <b
                      >3 cuotas sin inter√©s de $ <%= (cloth.price /
                      3).toFixed(2) %></b
                    >
                  </p>
                </div>
              </div>
            </a>
          </article>
          <% }) %>
        </div>
      </section>

      <section
        class="categories p-3 mt-4 d-flex flex-row flex-wrap justify-content-center align-items-center">
        <article class="d-flex flex-column align-items-center">
          <a
            id="camisetas"
            class="category text-decoration-none"
            href="/productos?categoria=camisetas">
            <h4 class="text-center position-relative">Remeras</h4>
            <img
              class="img-fluid"
              src="/img/products/camisetas/remeracat.jpg"
              alt="remeras" />
          </a>
        </article>

        <article class="d-flex flex-column align-items-center">
          <a
            id="bermudas"
            class="category text-decoration-none"
            href="/productos?categoria=bermudas">
            <h4 class="text-center position-relative">Bermudas</h4>
            <img
              class="img-fluid"
              src="/img/products/bermudas/bermudasCat.jpg"
              alt="bermudas" />
          </a>
        </article>

        <article class="d-flex flex-column align-items-center">
          <a
            id="pantalones"
            class="category text-decoration-none"
            href="/productos?categoria=pantalones">
            <h4 class="text-center position-relative">Pantalones</h4>
            <img
              class="img-fluid"
              src="/img/products/pantalones/pantalonescat.jpg"
              alt="pantalones" />
          </a>
        </article>

        <article class="d-flex flex-column align-items-center">
          <a
            id="zapatillas"
            class="category text-decoration-none"
            href="/productos?categoria=zapatillas">
            <h4 class="text-center position-relative">Zapatillas</h4>
            <img
              class="img-fluid"
              src="/img/products/zapatillas/zapatillascat.jpg"
              alt="zapatillas" />
          </a>
        </article>
      </section>
    </main>

    <%- include('partials/footer') %> <%- include('partials/wsp') %>
    <script src="/js/index.js"></script>
    <script src="/js/products.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
  </body>
</html>
