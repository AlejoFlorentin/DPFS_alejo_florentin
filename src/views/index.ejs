<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>
    <main class="mainIndex">
      <% if(locals.lastUser !== undefined) { %>
      <div
        class="d-flex justify-content-center align-items-center border border-dark rounded-2 gap-3 p-2 m-3 ms-5 me-5 border-3">
        <img class="imgUser rounded-2" src="<%= lastUser.image %>" alt="" />
        <h2 class="text-center">
          Bienvenido/a <%= lastUser.name %> a Superlative
        </h2>
        <h3></h3>
      </div>

      <%} %>
      <div
        id="carouselExampleInterval"
        class="carousel slide"
        data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="5000">
            <img
              src="/img/logos/carouse-1.webp"
              class="d-block w-100"
              alt="carousel-img" />
          </div>
          <div class="carousel-item" data-bs-interval="5000">
            <img
              src="/img/logos/carouse-2.webp"
              class="d-block w-100"
              alt="carousel-img" />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleInterval"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleInterval"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <section class="container mt-5">
        <h2 class="text-center mb-3">Destacados - Superlative</h2>
        <div class="product-container">
          <% destacados.forEach(cloth => { %>
          <article class="p-3">
            <a
              class="text-black text-decoration-none"
              href="/productos/detalle/<%= cloth.id %>">
              <img src="<%= cloth.images[0].url %>" alt="<%= cloth.title %>" />
              <div
                class="product-info d-flex flex-column align-items-center justify-content-center">
                <p class="text-center mt-2"><b><%= cloth.title %></b></p>
                <div class="d-flex flex-column align-items-center">
                  <p>$ <%= cloth.price %></p>
                  <p
                    class="quotes border border-danger border-1 p-1 text-danger text-center">
                    <b>3 x $ <%= (cloth.price / 3).toFixed(2) %> sin inter√©s</b>
                  </p>
                </div>
              </div>
            </a>
          </article>
          <% }) %>
        </div>
      </section>

      <section class="categories container mt-4">
        <article>
          <a
            id="camisetas"
            class="category text-decoration-none"
            href="/productos?categoria=camisetas">
            <h5>Remeras</h5>
            <img src="/img/products/camisetas/remeracat.jpg" alt="remeras" />
          </a>
        </article>

        <article>
          <a
            id="bermudas"
            class="category text-decoration-none"
            href="/productos?categoria=bermudas">
            <h5>Bermudas</h5>
            <img src="/img/products/bermudas/bermudasCat.jpg" alt="bermudas" />
          </a>
        </article>

        <article>
          <a
            id="pantalones"
            class="category text-decoration-none"
            href="/productos?categoria=pantalones">
            <h5>Pantalones</h5>
            <img
              src="/img/products/pantalones/pantalonescat.jpg"
              alt="pantalones" />
          </a>
        </article>

        <article>
          <a
            id="zapatillas"
            class="category text-decoration-none"
            href="/productos?categoria=zapatillas">
            <h5>Zapatillas</h5>
            <img
              src="/img/products/zapatillas/zapatillascat.jpg"
              alt="zapatillas" />
          </a>
        </article>
      </section>
    </main>

    <%- include('partials/footer') %> <%- include('partials/wsp') %>
    <script src="/js/index.js"></script>
    <script src="/js/products.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
  </body>
</html>
