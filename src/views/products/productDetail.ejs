<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>

    <main class="container">
      <section
        class="row w-100 p-3 d-flex justify-content-center align-items-center">
       <img class="col-md-6 imgDetail" src="<%= producto.img %>" alt="Imagen del producto" />
       <div
          class="col-md-6 d-flex flex-column align-items-center justify-content-center">
          <h2><%= producto.title %></h2>
          <p class="text-center">
            <%= producto.description %>
          </p>
          <h5>$ <%= producto.price.toFixed(2) %></h5>
          <p><b>$ <%= (producto.price * 0.1).toFixed(2) %></b> con Transferencia bancaria</p>
          <p>6 cuotas sin interes de $ <%= (producto.price / 6).toFixed(2) %>
</p>

          <div class="addAndCount">
            <div
              class="btn-group itemCount"
              role="group"
              aria-label="Basic example">
              <button type="button" class="btn btn-dark">+</button>
              <button type="button" class="btn btn-light">0</button>
              <button type="button" class="btn btn-dark">-</button>
            </div>

            <button type="button" class="btn btn-dark">
              Agregar al carrito
            </button>
          </div>
        </div>
      </section>
    </main>

    <%- include('../partials/footer') %><%- include('../partials/wsp') %> 
    <script src="/js/products.js"></script>
    <script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
  crossorigin="anonymous"></script>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  </body>
  </body>
</html>
