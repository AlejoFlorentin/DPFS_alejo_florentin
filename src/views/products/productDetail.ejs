<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: '| Detalle', styles: 'productDetail.css' }) %>
  <body>
    <%- include('../partials/header') %>

    <main class="container animate__animated animate__slideInDown">
      <section>
        <img src="<%= product.images[0].url %>" alt="Imagen del producto" />
        <div class="d-flex flex-column align-items-center justify-content-center gap-0">
          <% if(product.stock === 0) { %>
          <p class="text-danger fw-bold">Sin Stock</p>
          <%}%>
          <h2><%= product.title %></h2>
          <p class="text-center"><%= product.description %></p>
          <h5>$ <%= product.price.toFixed(2) %></h5>
          <p><b>$ <%= (product.price * 0.9).toFixed(2) %></b> con Transferencia bancaria</p>
          <p>6 cuotas sin interes de $ <%= (product.price / 6).toFixed(2) %></p>
         
          <p class="size"><b>Talle <%= product.sizes[0].size %></b></p>
          
          <%if(locals.lastUser) { %>
          <form action="/carrito/agregar/detalle/<%= product.id %>" method="POST">
            <div class="d-flex flex-column gap-2">
              <input type="hidden" name="counter" id="input-counter" value="1" />
              <div class="btn-group w-100" role="group">
                <button type="button" class="btn btn-dark" id="btn-sum">+</button>
                <button
                  type="button"
                  value="<%= product.stock %>"
                  class="btn btn-light"
                  id="counter"
                >
                  1
                </button>
                <button type="button" class="btn btn-dark" id="btn-rest">-</button>
              </div>
              <button <%= product.stock === 0 ? 'disabled' : '' %>  class="btn-add-product btn btn-dark" id="<%= product.id %>">
                Agregar al carrito
              </button>
            </div>
          </form>
          <% } %>
        </div>
      </section>
    </main>

    <%- include('../partials/footer') %><%- include('../partials/wsp') %>
    <script src="/js/products.js"></script>
    <script src="/js/detail.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  </body>
</html>
